<nav class="navbar navbar-expand-lg">
  <%= link_to "Devine Apparel", root_path, class: "navbar-da" %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">

    <%= form_with url: "/search", method: :get, class: "nav-form" do |form| %>
      <%= form.select :category, ["All Categories", "Sneakers", "Hats", "Clothes"], class: "nav-dropdowndd" %>
      <%= form.text_field :q, class: "nav-input", placeholder: "Search for sneakers, clothes, hats" %>
      <%= form.button "Search", class: "nav-search-btn", name: nil %>
    <% end %>

    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Home", root_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Collections", products_path, class: "nav-link" %>
      </li>
    </ul>

  </div>

  <div class="nav-profile-section">
    <% if user_signed_in? %>
      <p>Hi, <%= current_user.email.sub(/@.*/, '').capitalize %></p>
      <%= link_to "Profile",  user_info_path(current_user.id) %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= button_to "Sign In", new_user_session_path %>
    <% end %>
  </div>
</nav>