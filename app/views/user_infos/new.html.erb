    <div>
      <h1>Provide your information</h1>

      <%= form_with model: @user_info, url: user_infos_path, method: :post, local: true do |form| %>
      <div>
        <%= form.label :first_name, "First Name:" %>
        <%= form.text_field :first_name, id: "first_name", placeholder: "First Name" %>
      </div>

      <div>
        <%= form.label :last_name, "Last Name:" %>
        <%= form.text_field :last_name, id: "last_name", placeholder: "Last Name" %>
      </div>

      <div>
        <%= form.label :street, "Street:" %>
        <%= form.text_field :street, id: "street", placeholder: "Street" %>
      </div>

      <div>
        <%= form.label :postal_code, "Postal Code:" %>
        <%= form.text_field :postal_code, id: "postal_code", placeholder: "Postal Code" %>
      </div>

      <div>
        <%= form.label :city, "City:" %>
        <%= form.text_field :city, id: "city", placeholder: "City" %>
      </div>

      <div>
        <%= form.label :province_id, "Province:" %>
        <%= form.collection_select :province_id, @province, :id, :province_name, id: "province" %>
      </div>

      <div>
        <%= form.label :phone_number, "Phone Number:" %>
        <%= form.text_field :phone_number, id: "phone_number", placeholder: "Phone Number" %>
      </div>

      <%= link_to "Cancel", root_path %>
      <%= form.submit "Confirm" %>
      <% end %>
    </div>