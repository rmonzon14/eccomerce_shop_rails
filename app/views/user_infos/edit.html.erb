<main class="profile-form-main">
  <div class="form-section">
    <h1>Edit your information</h1>

    <%= form_with model: @user_info,  url: user_info_path(@user_info), method: :patch, local: true do |form| %>
    <div>
      <%= form.label :first_name, "First Name:" %>
      <%= form.text_field :first_name, id: "first_name", placeholder: "First Name", required: true %>
    </div>

    <div>
      <%= form.label :last_name, "Last Name:" %>
      <%= form.text_field :last_name, id: "last_name", placeholder: "Last Name", required: true %>
    </div>

    <div>
      <%= form.label :street, "Street:" %>
      <%= form.text_field :street, id: "street", placeholder: "Street", required: true %>
    </div>

    <div>
      <%= form.label :postal_code, "Postal Code:" %>
      <%= form.text_field :postal_code, id: "postal_code", placeholder: "Postal Code", required: true %>
    </div>

    <div>
      <%= form.label :city, "City:" %>
      <%= form.text_field :city, id: "city", placeholder: "City", required: true %>
    </div>

    <div>
      <%= form.label :province_id, "Province:" %>
      <%= form.collection_select :province_id, @province, :id, :province_name, id: "province" %>
    </div>

    <div>
      <%= form.label :phone_number, "Phone Number:" %>
      <%= form.text_field :phone_number, id: "phone_number", placeholder: "Phone Number", required: true %>
    </div>

      <%= link_to "Cancel", user_info_path, class: "profile-btn" %>
      <%= form.submit "Save", class: "profile-btn"  %>

    <% end %>
  </div>
</main>
